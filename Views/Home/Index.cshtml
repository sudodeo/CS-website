@{ ViewData["Title"] = "Home"; } @* hero section *@
<header class="hero home flex justify-center text-white px-5 sm:px-10 md:px-20">
  <div class="mt-32 md:mt-56 text-center">
    <h1
      class="capitalize text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-medium second_font text-white"
    >
      <p>Welcome to the department</p>
      <p class="mt-1 md:mt-3">of Computer Science</p>
    </h1>

    @* dynamic texts *@
    <div class="mt-2 md:mt-5 flex justify-center">
      <div>
        <span
          class="dynamic_texts text-sm sm:text-base md:text-lg lg:text-xl"
        ></span>
        <div class="typing_cursor"></div>
      </div>
    </div>

    @* buttons *@
    <div class="mt-5 md:mt-10 flex items-center justify-center gap-3">
      <button href="" class="main_btn filled" id="learnMore">Learn more</button>
      <a
        asp-area=""
        asp-controller="Programs"
        asp-action="Index"
        class="main_btn transparent"
      >
        View Programs
      </a>
    </div>
  </div>
</header>

<!-- gold section -->
<section class="px-5 sm:px-10 md:px-20">
  <div
    class="mt-5 section_cut max-w-6xl mx-auto p-8 flex flex-col md:flex-row items-start md:items-center gap-5"
  >
    <h2 class="font-bold text-xl md:text-2xl mr-5 capitalize">
      Innovative
      <br class="hidden md:block" />
      learners
    </h2>

    <p class="flex-1">
      Are you interested in pursuing a career in computer science? Our BSc
      program provides a comprehensive education in this exciting and rapidly
      evolving field
    </p>

    <a
      class="link_btn link"
      asp-area=""
      asp-controller="Programs"
      asp-action="Index"
    >
      <span> Our Programs </span>
      <svg
        class="button-arrow"
        width="14"
        height="10"
        viewBox="0 0 10 10"
        aria-hidden="true"
      >
        <g>
          <path class="button-arrow__line" d="M0 5h12"></path>
          <path class="button-arrow__tip" d="M1 1l4 4-4 4"></path>
        </g>
      </svg>
    </a>
  </div>
</section>

